def equalize_lengths(list):

    list.sort(key = len, reverse=True)
    max_len_list = len(max(list, key=len))
    #print(list)
    #print(max_len_list)

    import random
    def generate_random_string(length):
        letters = '_'
        rand_string = ''.join(random.choice(letters) for i in range(length))
        #print("Random string of length", length, "is:", rand_string)
        return rand_string

    iter=0
    for i in list:

        i_len = len(i)
        #print(len(i))
        if max_len_list > i_len:
            list[iter] = i + generate_random_string(max_len_list-i_len)
        iter = iter + 1
    return list

