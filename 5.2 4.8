def radius(p1, p2):
    # Распаковываем кортежи для удобства, “;” означает новую строку кода
    x1, y1 = p1; x2, y2 = p2
    # Вычисляем стороны по теореме Пифагора
    return ((x2 - x1) ** 2 + (y2 - y1)** 2) ** 0.5
    
print(radius(p1=(3, 2.5), p2=(4, 4.5)))
## 2.23606797749979
print(radius(p1=(0, 0), p2=(1, 1)))
## 1.4142135623730951